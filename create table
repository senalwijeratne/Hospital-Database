CREATE TABLE MH_CONSULTATION_SYMPTOMS(



);


/*Patient symptoms table*/
CREATE TABLE PATIENT_SYMPTOMS(
		patientsymptomID int,
		symptomname varchar(200),
		CONSTRAINT pk_symptomID PRIMARY KEY (patientID)
);

CREATE TABLE MH_CONSULTATION_PATIENT_SYMPTOMS(
		patientsymptomID int,
		consulatationID int,
		CONSTRAINT pk_symptomIDconsultationID PRIMARY KEY (patientsymptomID,consulatationID)
);

/*mh prescription */
CREATE TABLE MH_PRESCRIPTION();

/*mh consultaion prescription drug*/
CREATE TABLE MH_CONSULTAION_PRESCRIPTION();

/*doctor medicalHistory table*/
CREATE TABLE DOCTOR_MH_HISTORY(
		doctorID int,
		consulatationID int,
		CONSTRAINT pk_doctormedicalhistory PRIMARY KEY (doctorID,consulatationID)
);


/*drugs table*/
CREATE TABLE DRUGS(
		drugID 		int,
		drugName 	varchar(255),
		drugCompany	varchar(100),
		drugPrice	money,
		drugPurpose varchar(200),
		legalClassification varchar(10),
		CONSTRAINT pk_drugID PRIMARY KEY (drugID)
);

/*mh prescription drug*/
CREATE TABLE MH_PRESCRIPTION_DRUG();


/* MEDICAL HISTORY ADMISSION Table */
CREATE TABLE MH_ADMISSION (
		admissionID			int,
		invoiceID int,
		doctorID 			int,
		bedNo 				int,
		admissionDate		date,
		dischargeDate		date,
		paymentStatus 		int,
		CONSTRAINT pk_admissionID PRIMARY KEY (admissionID),
		CONSTRAINT fk_invoiceID FOREIGN KEY (invoiceID) REFERENCES BILL(invoiceID),

);

/*rooms table*/

CREATE TABLE ROOM(
		roomID int,
		bedID int,
		type varchar(100),
		status varchar(100),
		CONSTRAINT pk_roomid PRIMARY KEY (roomID)
);


/*medical history admisssion room table */

CREATE TABLE MH_ADMISSION_ROOM (
		roomID int,
		admissionID int,
		CONSTRAINT pk_addmissionroom PRIMARY KEY (roomID,admissionID)
);

